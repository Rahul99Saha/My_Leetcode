//Brute force : if it has 0 then place the row with -1
#include <bits/stdc++.h>
using namespace std;
class Solution {
public:
    void mark_Row(vector<vector<int>>& matrix,int i,int m,int n)
    {
        
        for(int j=0;j<n;j++)
        {
            if(matrix[i][j]!=0)
            matrix[i][j]=-999;
        }
    }
    void mark_Column(vector<vector<int>>& matrix,int j,int m,int n)
    {
        for(int i=0;i<m;i++)
        {
            if(matrix[i][j]!=0)
            matrix[i][j]=-999;
        }
    }
    vector<vector<int>> setZeroes(vector<vector<int>>& matrix) 
    {
        int m = matrix.size();
        int n = matrix[0].size();
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(matrix[i][j]==0)
                {
                    mark_Row(matrix,i,m,n);
                    mark_Column(matrix,j,m,n);
                }
            }
        }
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(matrix[i][j]==-999)
                matrix[i][j]=0;
            }
        }
        return matrix;
    }
};
